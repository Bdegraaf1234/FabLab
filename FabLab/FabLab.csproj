<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<ProjectGuid>{01fd09cd-08d3-43c4-a4e8-623ee3e183c3}</ProjectGuid>
		<OutputType>WinExe</OutputType>
		<AssemblyTitle>FabLab</AssemblyTitle>
		<Product>FabLab</Product>
		<UseWindowsForms>true</UseWindowsForms>
		<TargetFramework>net4.8</TargetFramework>
		<Copyright>Copyright Â©  2023</Copyright>
		<Configurations>Debug;Release;Local</Configurations>
		<ApplicationIcon>icon_fablab.ico</ApplicationIcon>

		<GenerateResourceUsePreserializedResources>true</GenerateResourceUsePreserializedResources>

		<GenerateAssemblyInfo>False</GenerateAssemblyInfo>

		<Version>0.1</Version>
		<Deterministic>false</Deterministic>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="gplv2.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<EmbeddedResource Include="Assets\IMGT_NoIsotypes_IGH_probabilitydistribution.csv" />
		<EmbeddedResource Include="Assets\IMGT_NoIsotypes_IGK_probabilitydistribution.csv" />
		<EmbeddedResource Include="Assets\IMGT_NoIsotypes_IGL_probabilitydistribution.csv" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include=".editorconfig" />
		<AdditionalFiles Include="stylecop.json" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="System.Deployment" />
		<Reference Include="System.Design" />
		<Reference Include="System.Windows.Forms" />
		<Reference Include="System.Windows.Forms.DataVisualization" />
		<PackageReference Include="System.Resources.Extensions" Version="6.0.0" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(Configuration)'=='Local' or '$(Configuration)'=='LocalCi'">
			<ItemGroup>
				<ProjectReference Include="..\..\hecklib-graphics\Source\hecklib-graphics\hecklib-graphics.csproj" />
				<ProjectReference Include="..\..\hecklib-win32\Source\hecklibWin32\hecklib-win32.csproj" />
				<ProjectReference Include="..\..\PsrmUtils\Source\PsrmLib\PsrmLib.csproj" />
				<PackageReference Include="hecklib.html_generator" Version="0.*" />
				<PackageReference Include="GenDictEdit" Version="1.1.0" />
				<PackageReference Include="iTextSharp" Version="5.5.13.2" />
			</ItemGroup>
		</When>
		<Otherwise>
			<PropertyGroup>
				<RestoreSources>https://api.nuget.org/v3/index.json;$(ProjectDir)..\nuget\</RestoreSources>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="dependencies" Version="1.9"/>
			</ItemGroup>
		</Otherwise>
	</Choose>

	<Target Name="CopyDlls" AfterTargets="Build">
		<ItemGroup Condition="'$(Configuration)'=='Local' or '$(Configuration)'=='LocalCi'">
			<ToCopy Include="$(OutputPath)*.dll" Exclude = "$(OutputPath)System.*.dll"/>
		</ItemGroup>
		<Copy SourceFiles="@(ToCopy)"
		  DestinationFolder="$(ProjectDir)..\NugetBuilder\dll" ></Copy>
	</Target>

</Project>
